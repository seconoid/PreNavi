<% provide(:title, "新規登録") %>
<h1>アピール登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @appeal, url: user_appeal_path do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.hidden_field :user_id, :value => @user.id %>

      <%= f.label :caption %>
      <%= f.text_field :caption, class: 'form-controle' %>

      <%= f.label :body %>
      <%= f.text_field :body, class: 'form-controle' %>

      <%= f.submit "アカウント登録", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
