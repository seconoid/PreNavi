<% provide(:title, "新規登録") %>
<h1>アピール登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag user_appeal_path, method: :post do %>
      <%= hidden_field_tag 'appeals[][user_id]', @user.id %>
      <%= label_tag '項目名' %>
      <%= text_field_tag 'appeals[][caption]', "", class: 'form-controle' %>
      <%= label_tag '本文' %>
      <%= text_area_tag 'appeals[][body]', "", rows: 5, class: 'form-controle' %>
      <%= hidden_field_tag 'appeals[][user_id]', @user.id %>
      <%= label_tag '項目名' %>
      <%= text_field_tag 'appeals[][caption]', "", class: 'form-controle' %>
      <%= label_tag '本文' %>
      <%= text_area_tag 'appeals[][body]', "", rows: 5, class: 'form-controle' %>
      <%= submit_tag "登録", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
