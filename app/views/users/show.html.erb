<% provide(:title, @user.name) %>

<div class="content">
  <div class="row">
    <div class="col-sm-3">
      <div class="user-info">
        <h2 class="user-image">
          <%= image_tag(@user.image.url, :size  => "180x180") %>
        </h2>
        <ul class="user-basic-info">
          <li class="user-name"><%= @user.name %></li>
          <% if @student %>
            <%= render partial: "student", locals: {student: @student} %>
          <% end %>
          <% if @client %>
            <%= render partial: "client", locals: {client: @client} %>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="col-sm-9">
      <% if @student %>
        <%= render partial: "student_detail", locals: {appeals: @user.appeals} %>
      <% end %>
      <% if @client %>
        <%= render partial: "client_profile", locals: {student: @student} %>
      <% end %>
    </div>
  </div>
</div>