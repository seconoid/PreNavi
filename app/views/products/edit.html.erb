<% provide(:title, "作品情報変更") %>
<div class="content">
  <div class="row">
    <h1>作品情報変更</h1>
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@product) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-controle' %>

        <%= f.label :about %>
        <%= f.text_area :about, class: 'form-controle' %>

        <%= f.label :appeal %>
        <%= f.text_area :appeal, class: 'form-controle' %>

        <%= f.label :url %>
        <%= f.text_field :url, class: 'form-controle' %>

        <%= f.label :image, "イメージ画像" %>
        <%= f.file_field :image %>

        <%= f.submit "更新", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>