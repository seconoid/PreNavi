<% provide(:title, "新規登録") %>
<h1>新規登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@student) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-controle' %>

      <%= f.label :s_class %>
      <%= f.text_field :s_class, class: 'form-controle' %>

      <%= f.label :s_code %>
      <%= f.text_field :s_code, class: 'form-controle' %>

      <%= f.label :s_no %>
      <%= f.text_field :s_no, class: 'form-controle' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-controle' %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: 'form-controle' %>

      <%= f.submit "アカウント登録", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
